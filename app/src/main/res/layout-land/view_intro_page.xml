<com.mvcoding.financius.feature.intro.IntroPageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/keyline"
    tools:background="?colorPrimary"
    tools:theme="?themeInverse">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/keyline"
        android:scaleType="centerInside"
        app:layout_widthPercent="50%"
        tools:ignore="ContentDescription"
        tools:src="@drawable/intro_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Text.Headline"
            tools:text="@string/intro_title_1"
            tools:theme="?themeInverse" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xlarge"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Text.Subhead"
            tools:text="@string/intro_message_1"
            tools:theme="?themeInverse" />

    </LinearLayout>

</com.mvcoding.financius.feature.intro.IntroPageView>
<resources>
    <declare-styleable name="Theme">
        <attr name="colorPrimaryLight" format="color" />
        <attr name="colorAccentDark" format="color" />
        <attr name="colorActionIcon" format="color" />
        <attr name="colorDivider" format="color" />
        <attr name="backgroundPrimary" format="color" />
        <attr name="floatingActionButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="android:src" />
        <attr name="android:tint" />
    </declare-styleable>

    <declare-styleable name="AspectLayout">
        <attr name="aspectBase" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
            <enum name="smallest" value="2" />
            <enum name="biggest" value="3" />
        </attr>
        <attr name="aspect" format="float" />
    </declare-styleable>
</resources>
<com.mvcoding.financius.feature.intro.IntroView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:orientation="vertical"
    android:theme="?themeInverse">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        style="@style/ButtonBar"
        android:background="?colorPrimaryDark"
        tools:theme="?themeInverse">

        <Button
            android:id="@+id/skipButton"
            style="@style/Button.Flat.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/skip" />

        <Button
            android:id="@+id/loginButton"
            style="@style/Button.Flat.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:text="@string/login" />

    </FrameLayout>

</com.mvcoding.financius.feature.intro.IntroView>
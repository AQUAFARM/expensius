<LinearLayout
    style="@style/RecyclerViewItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/colorImageView"
        android:layout_width="@dimen/keyline_content_minus_keyline_3x"
        android:layout_height="@dimen/keyline_content_minus_keyline_3x"
        android:src="@drawable/oval"
        tools:ignore="ContentDescription"
        tools:tint="#8bc34a" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_2x"
        android:layout_weight="1"
        android:textAppearance="@style/Text.Subhead"
        tools:text="@string/t_non_essential" />

</LinearLayout>
<com.mvcoding.expensius.feature.report.ReportsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/keyline_half">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_normal"
            android:text="@string/expense"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.Caption"
            android:textColor="?android:textColorSecondary" />

        <include
            android:id="@+id/expenseTagsReportView"
            layout="@layout/view_tags_report" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_marginTop="@dimen/space_large"
            android:text="@string/income"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.Caption"
            android:textColor="?android:textColorSecondary" />

        <include
            android:id="@+id/incomeTagsReportView"
            layout="@layout/view_tags_report" />

    </LinearLayout>


</com.mvcoding.expensius.feature.report.ReportsView>